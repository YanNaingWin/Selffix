<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.selffix.TrafficReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/traffic_report_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:paddingRight="16dp">


        <ImageView
            android:id="@+id/btnClose_newRequest2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="2sp"
            android:src="@drawable/sf1" />


        <ImageView
            android:id="@+id/toolBarTitle_newRequest2"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:src="@drawable/sftext" />


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:padding="20sp"
        android:id="@+id/imageView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:src="@drawable/green1"

            android:layout_width="wrap_content"
            android:layout_height="60sp" />
            <TextView
                android:paddingTop="5sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:text="လမ္းေၾကာရွင္း"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/orange1"
                android:layout_width="wrap_content"
                android:layout_height="60sp" />
            <TextView
                android:textColor="@color/colorPrimary"
                android:paddingTop="5sp"
                android:layout_gravity="center"
                android:text="သြားလာရန္အဆင္ေျပ"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/red1"
                android:id="@+id/red_btn"
                android:layout_width="wrap_content"
                android:layout_height="60sp" />
            <TextView
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textColor="@color/colorPrimary"
                android:paddingTop="5sp"
                android:text="ယာဥ္ေၾကာပိတ္"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/post_traffic_report_btn"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:text="လမ္းေၾကာသတင္းတင္မည္"
            android:background="@drawable/btn_submit_rectangle"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
