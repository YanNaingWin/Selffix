<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.user.selffix.TrafficReportActivity">

    <LinearLayout
        android:padding="20sp"
        android:id="@+id/imageView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/green1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60sp" />

        <ImageView
            android:src="@drawable/orange1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60sp" />

        <ImageView
            android:src="@drawable/red1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/post_traffic_report_btn"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/circle_shape"
            android:text="Report"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
